class Mahasiswa:
    def __init__(self,nama,nilai,):
        self.nama=nama
        self.nilai=nilai
    def printMaha(self):
        print("Nama :"+self.nama)
        print("Nilai :"+str(self.nilai))
x = True
while(x == True):

    print("===== Program OOP =====")
    print("1. Mendeklarasikan Objek")
    print("2. Menampilkan Objek")
    print("3. Merubah Nilai Objek")
    print("4. Menghapus Objek")
    print("5. Keluar Dari Program")
    pilihan=int(input("Masukkan Pilihan Berupa Angka (1/2/3/4): "))

    if (pilihan == 1):
        nama = input("Masukkan Namamu: ")
        nilai = input("Masukkan Nilaimu: ")
        mahasiswa1 = Mahasiswa(nama, nilai)
        print ()
        print("Data Berhasil Ditambahkan")
        print ()
    elif(pilihan == 2):
        mahasiswa1 = Mahasiswa(nama, nilai)
        print ()
        mahasiswa1.printMaha()
        print ()
    elif(pilihan == 3):
        a = "Nama"
        b = "Nilai"
        pilihan2 = input("Apa Yang Ingin Kamu Ubah (Nama/Nilai): ")
        if(pilihan2 == a):
            nama = input("Masukkan Namamu: ")
            print ()
            print("Data Berhasil Diubah")
            print ()
        elif(pilihan2 == b):
            nilai=input("Masukkan Nilaimu: ")
            print ()
            print("Data Berhasil Diubah")
            print ()
    elif(pilihan == 4):
        print("Data Berhasil Dihapus")
        print ()
        nama = "NONE"
        nilai = "NONE"
        print ()
    elif(pilihan == 5):
        x = False
        print ()
        print("Terima Kasih Telah Menggunakan Program Saya")
